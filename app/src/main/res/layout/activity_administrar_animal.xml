<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.willian.projetopurina.AdministrarAnimal">

    <TextView
        android:id="@+id/administrar_animal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:text="Pesquisar cachorro por CPF do tutor."
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/cpfPesquisa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="CPF do Tutor"
        android:inputType="number"
        android:layout_below="@+id/administrar_animal"
        android:layout_alignParentStart="true"
        android:layout_marginTop="60dp" />

    <Button
        android:id="@+id/btnPesquisar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pesquisar"
        android:layout_marginTop="78dp"
        android:layout_below="@+id/cpfPesquisa"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
